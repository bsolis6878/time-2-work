    </div>
  </div>

  <div class="field">
    <label class="label"for="email-edit">Current Email</label>
    <div class="control has-icons-left has-icons-right">
      <input
        name="email-edit"
        class="input"
        type="email"
        id="email-edit"
        placeholder="hello@time2work.com"
        value="{{email}}"
      />
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <label class="label"for="address-edit">Current Address</label>
    <div class="control has-icons-left has-icons-right">
      <input
      name="address-edit"
        class="input"
        type="address"
        id="address-edit"
        placeholder="1234 Happy Circle, Happyville CA 12345"
        value="{{address}}"
      />
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <label class="label"for="phone-edit">Current Number</label>
    <div class="control has-icons-left has-icons-right">
      <input class="input" name="number-edit" type="tel"id="number-edit" placeholder="(555)555-5555" value="{{phone}}" />
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <label class="label"for="tax-edit">Current Tax-ID (SSN/EIN)</label>
    <div class="control has-icons-left has-icons-right">
      <input class="input"name="tax-edit"  type="text" placeholder="9999999999"  id="tax-edit" value="{{tax_id}}" />
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>



  <div class="field is-grouped my-5">
    <div class="control">
      <button class="button is-dark">Submit</button>
    </div>
    <div class="control">
      <button class="button is-light">Cancel</button>
    </div>
  </div>

