<section
  class="hero is-fullheight-with-navbar has-background-grey-lighter px-5 py-5"
>
  <div class="hero-body">
    <section>
      <form class="jobs-form is-size-6-mobile">
        <div class="signed-in">
          {{#if loggedIn}}
            <h1>Currently Signed in as: {{name}}</h1>
          {{/if}}
        </div>
        <div class="jobs-form is-size-6-mobile">
          <h1>Jobs you completed today</h1>
          <div>
            <label for="company_id">Company ID:</label>
            <input type="text" id="company_id" readonly value="{{cid}}" />
          </div>
          <div>
            <label for="employee_id">Employee ID:</label>
            <input type="text" id="employee_id" readonly value="{{eid}}" />
          </div>
          <div>
            <label for="job-id">Job Worked</label>
            <select class="job-id" type="select" id="job-id">
              {{#each job}}
                <option data-id="{{this.id}}" value="{{this.id}}">
                  {{this.job}}
                </option>
              {{/each}}
            </select>
          </div>
          <div>
            <label for="minutes-worked">Minutes Worked:</label>
            <input type="text" id="minutes-worked" />
          </div>
          <div>
            <button type="submit" class="button is-dark">Submit</button></div>

        </div>

      </form>
    </section>
  </div>

</section>
<script src="/javascript/hours.js"></script>