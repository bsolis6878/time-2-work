<div class="signed-in">
{{#if loggedIn}}
<h1>Current Signed in as: {{name}}</h1>
{{/if}}
</div>
<form class="jobs is-size-6-mobile">
    <h1>Jobs you completed today</h1>
    <div>
    <label for="job-input">Job you completed:</label>
    <select  id="job-input" />  </select>
    {{#each}}
    <option></option>
    {{/each}}
    </div>
    <label for="hours-input">Hours:</label>   
    <input type="text" id="hours-input" /> 
    <label for="minutes-input">Minutes:</label>
    <input type="text" id="minutes-input" /> 
    <button type="submit" class="button is-dark">Submit</button>
</form>