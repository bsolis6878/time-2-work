<section
  class="hero is-fullheight-with-navbar has-background-grey-lighter px-5 py-5"
>
  <div class="hero-body">
    <div class="columns is-multiline is-mobile">

      {{#each user}}
        <div class="column">
          <div class="card my-5">
            <header class="card-header is-justify-content-space-between">
              <div class="container">
                <p class="card-header-title">
                  #
                  {{this.user.id}}
                  -
                  {{this.user.name}}
                </p>
              </div>
              <div class="container">
                <p class="card-header-title is-justify-content-right">
                  Role:
                  {{this.role.role_name}}
                </p>
              </div>
            </header>
            <div class="card-content py-4">
              {{! first row }}
              <div class="content">
                <h4 class="is-size-6 mb-0">Company:</h4>
                {{this.company.name}}
              </div>

              {{! second row }}
              <div class="content">
                <div class="columns">
                  <div class="column py-2">
                    <h4 class="is-size-6 mb-0">Username:</h4>
                    <p class="">{{this.user.username}}</p>
                  </div>
                  <div class="column py-2">
                    <h4 class="is-size-6 mb-0">Email Address:</h4>
                    <p class="">{{this.user.email}}</p>
                  </div>
                  <div class="column py-2">
                    <h4 class="is-size-6 mb-0">Phone Number:</h4>
                    <p class="">{{this.user.phone_number}}</p>
                  </div>
                </div>
              </div>

              {{! third row }}
              <div class="content">
                <h4 class="is-size-6 mb-0">Address:</h4>
                {{this.user.addr1}}
              </div>

              <div class="content">
                <h4 class="is-size-6 mb-0">Created At:</h4>
                <span class="is-size-6">{{this.user.createdAt}}</span>
                <p class="mb-1"></p>
                <h4 class="is-size-6 mb-0">Last Updated:</h4>
                <span class="is-size-6">{{this.user.updatedAt}}</span>
              </div>

              <div class="content">
              </div>

            </div>
            <footer class="card-footer">
              <a href="edit/{{this.id}}" class="card-footer-item">Edit</a>
            </footer>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>